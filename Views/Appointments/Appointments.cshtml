@{
    ViewData["Title"] = "Appointments";
 
}


    <!-- Page Header -->
    <section class="content-header">
        <div class="container-fluid d-flex justify-content-between align-items-center">
            <h1 class="mb-0"><i class="fas fa-calendar-alt me-2"></i> Appointments</h1>
            <a href="#" class="btn btn-primary">
                <i class="fas fa-plus me-1"></i> Schedule New Appointment
            </a>
        </div>
    </section>

    <!-- Main Content -->
    <section class="content">
        <div class="container-fluid">

            <!-- Filter Section -->
            <div class="card card-outline card-primary mb-3">
                <div class="card-body">
                    <form class="row g-3">
                        <div class="col-md-3">
                            <label class="form-label fw-bold">Date</label>
                            <input type="date" class="form-control" />
                        </div>
                        <div class="col-md-3">
                            <label class="form-label fw-bold">Doctor</label>
                            <select class="form-select">
                                <option selected>All Doctors</option>
                                <option>Dr. Santos</option>
                                <option>Dr. Tan</option>
                                <option>Dr. Perez</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label fw-bold">Status</label>
                            <select class="form-select">
                                <option selected>All</option>
                                <option>Scheduled</option>
                                <option>Completed</option>
                                <option>Cancelled</option>
                            </select>
                        </div>
                        <div class="col-md-3 d-flex align-items-end">
                            <button type="submit" class="btn btn-success w-100">
                                <i class="fas fa-search me-1"></i> Filter
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Appointments Table -->
            <div class="card">
                <div class="card-header bg-light">
                    <h3 class="card-title mb-0"><i class="fas fa-list me-2"></i>Appointments List</h3>
                </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="appointmentsTable" class="table table-striped table-hover align-middle">

                        <thead class="table-light">
                            <tr>
                                <th>Date</th>
                                <th>Time</th>
                                <th>Patient</th>
                                <th>Doctor</th>
                                <th>Department</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>2025-10-28</td>
                                <td>09:00 AM</td>
                                <td>John Doe</td>
                                <td>Dr. Santos</td>
                                <td>Cardiology</td>
                                <td><span class="badge bg-success">Scheduled</span></td>
                                <td>
                                    <a href="#" class="btn btn-sm btn-info"><i class="fas fa-eye"></i></a>
                                    <a href="#" class="btn btn-sm btn-warning"><i class="fas fa-edit"></i></a>
                                    <a href="#" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></a>
                                </td>
                            </tr>
                            <tr>
                                <td>2025-10-20</td>
                                <td>02:00 PM</td>
                                <td>Jane Smith</td>
                                <td>Dr. Tan</td>
                                <td>Endocrinology</td>
                                <td><span class="badge bg-secondary">Completed</span></td>
                                <td>
                                    <a href="#" class="btn btn-sm btn-info"><i class="fas fa-eye"></i></a>
                                    <a href="#" class="btn btn-sm btn-warning"><i class="fas fa-edit"></i></a>
                                    <a href="#" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></a>
                                </td>
                            </tr>
                            <tr>
                                <td>2025-09-15</td>
                                <td>10:30 AM</td>
                                <td>Alex Cruz</td>
                                <td>Dr. Perez</td>
                                <td>General Medicine</td>
                                <td><span class="badge bg-danger">Cancelled</span></td>
                                <td>
                                    <a href="#" class="btn btn-sm btn-info"><i class="fas fa-eye"></i></a>
                                    <a href="#" class="btn btn-sm btn-warning"><i class="fas fa-edit"></i></a>
                                    <a href="#" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            </div>
        </div>
    </section>


<!-- Optional: DataTables for sorting/searching -->
@section Scripts {
        
    <link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.5.0/css/responsive.bootstrap5.min.css" />

    <script src="https://cdn.datatables.net/responsive/2.5.0/js/dataTables.responsive.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.5.0/js/responsive.bootstrap5.min.js"></script>


    <script>
        $(document).ready(function () {
            $('#appointmentsTable').DataTable({
                "order": [[0, "desc"]],
                "pageLength": 5
            });
        });
    </script>
}
