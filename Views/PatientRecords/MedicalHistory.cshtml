@{
    ViewData["Title"] = "Medical History";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <!-- Header -->
    <section class="content-header">
        <div class="container-fluid d-flex justify-content-between align-items-center">
            <h1 class="mb-0"><i class="fas fa-notes-medical me-2"></i> Medical History</h1>
            <a href="/PatientRecords/PatientProfiles" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-1"></i> Back to Patient Profiles
            </a>
        </div>
    </section>

    <!-- Main Content -->
    <section class="content">
        <div class="container-fluid">

            <!-- Patient Header -->
            <div class="card card-primary card-outline mb-3">
                <div class="card-body d-flex align-items-center">
                    <img src="/img/patients/p1.jpg" alt="Patient" class="rounded-circle me-3" width="80" height="80">
                    <div>
                        <h4 class="mb-1">John Doe</h4>
                        <p class="mb-0 text-muted">Patient ID: <strong>PT-0001</strong></p>
                        <p class="mb-0 text-muted">Age: 37 | Male</p>
                    </div>
                </div>
            </div>

            <!-- Medical Summary -->
            <div class="row">
                <!-- Diagnoses -->
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header bg-light">
                            <h3 class="card-title"><i class="fas fa-diagnoses me-2"></i>Diagnoses</h3>
                        </div>
                        <div class="card-body">
                            <ul class="list-group">
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    Hypertension
                                    <span class="badge bg-primary">Ongoing</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    Type 2 Diabetes
                                    <span class="badge bg-warning">Under Control</span>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>

                <!-- Allergies -->
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header bg-light">
                            <h3 class="card-title"><i class="fas fa-allergies me-2"></i>Allergies</h3>
                        </div>
                        <div class="card-body">
                            <ul class="list-group">
                                <li class="list-group-item">Penicillin</li>
                                <li class="list-group-item">Seafood (Shellfish)</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Past Surgeries -->
            <div class="card mt-3">
                <div class="card-header bg-light">
                    <h3 class="card-title"><i class="fas fa-user-injured me-2"></i>Past Surgeries</h3>
                </div>
                <div class="card-body">
                    <table class="table table-striped align-middle">
                        <thead>
                            <tr>
                                <th>Procedure</th>
                                <th>Date</th>
                                <th>Hospital</th>
                                <th>Surgeon</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Appendectomy</td>
                                <td>2015-04-22</td>
                                <td>St. Luke’s Medical Center</td>
                                <td>Dr. Perez</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Medications -->
            <div class="card mt-3">
                <div class="card-header bg-light">
                    <h3 class="card-title"><i class="fas fa-pills me-2"></i>Current Medications</h3>
                </div>
                <div class="card-body">
                    <table class="table table-bordered table-hover align-middle">
                        <thead>
                            <tr>
                                <th>Medication</th>
                                <th>Dosage</th>
                                <th>Frequency</th>
                                <th>Start Date</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Metformin</td>
                                <td>500mg</td>
                                <td>Twice Daily</td>
                                <td>2022-08-01</td>
                                <td><span class="badge bg-success">Active</span></td>
                            </tr>
                            <tr>
                                <td>Lisinopril</td>
                                <td>10mg</td>
                                <td>Once Daily</td>
                                <td>2023-02-10</td>
                                <td><span class="badge bg-success">Active</span></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Visit History -->
            <div class="card mt-3">
                <div class="card-header bg-light">
                    <h3 class="card-title"><i class="fas fa-calendar-check me-2"></i>Recent Visits</h3>
                </div>
                <div class="card-body">
                    <table class="table table-striped align-middle">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Department</th>
                                <th>Doctor</th>
                                <th>Reason</th>
                                <th>Notes</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>2025-02-14</td>
                                <td>Cardiology</td>
                                <td>Dr. Santos</td>
                                <td>Follow-up for blood pressure</td>
                                <td>Stable readings. Continue medication.</td>
                            </tr>
                            <tr>
                                <td>2024-11-09</td>
                                <td>Endocrinology</td>
                                <td>Dr. Tan</td>
                                <td>Diabetes management</td>
                                <td>HbA1c improved to 6.5%</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </section>

