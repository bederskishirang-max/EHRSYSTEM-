@{
    ViewData["Title"] = "Clinical Notes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <section class="content-header">
        <div class="container-fluid d-flex justify-content-between align-items-center">
            <h1><i class="fas fa-stethoscope me-2"></i> Clinical Notes</h1>
            <a asp-action="AddEdit" class="btn btn-primary">
                <i class="fas fa-plus me-1"></i> Add Clinical Note
            </a>
        </div>
    </section>

    <!-- Main Content -->
    <section class="content">
        <div class="container-fluid">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h3 class="card-title mb-0">Patient Clinical Notes</h3>
                </div>

            <div class="card-body">
                <div class="table-responsive">
                    <table id="notesTable" class="table table-bordered table-hover table-striped">
                        <thead class="table-dark">
                            <tr>
                                <th>Date</th>
                                <th>Patient</th>
                                <th>Doctor</th>
                                <th>Summary</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>2025-10-27</td>
                                <td>John Doe</td>
                                <td>Dr. Emily Santos</td>
                                <td>Follow-up consultation regarding hypertension.</td>
                                <td>
                                    <a asp-action="Details" asp-route-id="1" class="btn btn-sm btn-info me-1"><i class="fas fa-eye"></i></a>
                                    <a asp-action="AddEdit" asp-route-id="1" class="btn btn-sm btn-warning me-1"><i class="fas fa-edit"></i></a>
                                    <a asp-action="Delete" asp-route-id="1" class="btn btn-sm btn-danger"><i class="fas fa-trash-alt"></i></a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            </div>
        </div>
    </section>




@section Scripts {
    <link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.5.0/css/responsive.bootstrap5.min.css" />

    <script src="https://cdn.datatables.net/responsive/2.5.0/js/dataTables.responsive.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.5.0/js/responsive.bootstrap5.min.js"></script>
    <script>
          $('#notesTable').DataTable({
            responsive: {
                details: true
            },
            pageLength: 10
        });


    </script>
}
