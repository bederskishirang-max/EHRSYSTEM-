@{
    ViewData["Title"] = "Reports & Analytics";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <section class="content-header">
        <div class="container-fluid d-flex justify-content-between align-items-center">
            <h1><i class="fas fa-chart-line me-2"></i> Reports & Analytics</h1>
        </div>
    </section>

    <!-- Dashboard Cards -->
    <section class="content">
        <div class="container-fluid">
            <div class="row g-3">
                <!-- Patients -->
                <div class="col-md-3">
                    <div class="small-box bg-primary shadow">
                        <div class="inner">
                            <h3>120</h3>
                            <p>Total Patients</p>
                        </div>
                        <div class="icon">
                            <i class="fas fa-users"></i>
                        </div>
                    </div>
                </div>

                <!-- Appointments -->
                <div class="col-md-3">
                    <div class="small-box bg-success shadow">
                        <div class="inner">
                            <h3>45</h3>
                            <p>Upcoming Appointments</p>
                        </div>
                        <div class="icon">
                            <i class="fas fa-calendar-check"></i>
                        </div>
                    </div>
                </div>

                <!-- Admissions -->
                <div class="col-md-3">
                    <div class="small-box bg-warning shadow">
                        <div class="inner">
                            <h3>8</h3>
                            <p>Active Admissions</p>
                        </div>
                        <div class="icon">
                            <i class="fas fa-hospital-user"></i>
                        </div>
                    </div>
                </div>

                <!-- Discharges -->
                <div class="col-md-3">
                    <div class="small-box bg-danger shadow">
                        <div class="inner">
                            <h3>5</h3>
                            <p>Recent Discharges</p>
                        </div>
                        <div class="icon">
                            <i class="fas fa-door-open"></i>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Charts Section -->
            <div class="row mt-4">
                <!-- Appointment Trends -->
                <div class="col-md-6">
                    <div class="card shadow-sm">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0"><i class="fas fa-chart-line me-2"></i>Monthly Appointment Trends</h5>
                        </div>
                        <div class="card-body">
                            <canvas id="appointmentsChart"></canvas>
                        </div>
                    </div>
                </div>

                <!-- Patient Age Distribution -->
                <div class="col-md-6">
                    <div class="card shadow-sm">
                        <div class="card-header bg-success text-white">
                            <h5 class="mb-0"><i class="fas fa-chart-pie me-2"></i>Patient Age Distribution</h5>
                        </div>
                        <div class="card-body">
                            <canvas id="ageChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Reports Table -->
            <div class="card mt-4 shadow-sm">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0"><i class="fas fa-file-alt me-2"></i>Recent Reports</h5>
                </div>
                <div class="card-body table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Report Name</th>
                                <th>Date Generated</th>
                                <th>Generated By</th>
                                <th>Type</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Weekly Appointment Summary</td>
                                <td>Oct 26, 2025</td>
                                <td>Dr. Santos</td>
                                <td>Appointments</td>
                            </tr>
                            <tr>
                                <td>Lab Result Overview</td>
                                <td>Oct 25, 2025</td>
                                <td>Dr. Cruz</td>
                                <td>Laboratory</td>
                            </tr>
                            <tr>
                                <td>Discharge Statistics</td>
                                <td>Oct 22, 2025</td>
                                <td>Admin</td>
                                <td>Admissions</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>


@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Appointment Trends Chart
        const ctx1 = document.getElementById('appointmentsChart').getContext('2d');
        new Chart(ctx1, {
            type: 'line',
            data: {
                labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'],
                datasets: [{
                    label: 'Appointments',
                    data: [30, 45, 28, 60, 50, 70],
                    borderColor: '#007bff',
                    backgroundColor: 'rgba(0,123,255,0.1)',
                    tension: 0.4,
                    fill: true
                }]
            },
            options: {
                responsive: true,
                scales: { y: { beginAtZero: true } }
            }
        });

        // Patient Age Distribution
        const ctx2 = document.getElementById('ageChart').getContext('2d');
        new Chart(ctx2, {
            type: 'pie',
            data: {
                labels: ['0-18', '19-35', '36-50', '51-65', '65+'],
                datasets: [{
                    data: [10, 25, 30, 20, 15],
                    backgroundColor: ['#28a745', '#17a2b8', '#ffc107', '#dc3545', '#6c757d']
                }]
            },
            options: {
                responsive: true
            }
        });
    </script>
}
