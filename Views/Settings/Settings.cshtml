@{
    ViewData["Title"] = "System Settings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <section class="content-header">
        <div class="container-fluid d-flex justify-content-between align-items-center">
            <h1><i class="fas fa-cogs me-2"></i> System Settings</h1>
        </div>
    </section>

    <!-- Settings Content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">

                <!-- General Settings -->
                <div class="col-md-6">
                    <div class="card shadow-sm">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0"><i class="fas fa-sliders-h me-2"></i> General Settings</h5>
                        </div>
                        <div class="card-body">
                            <form>
                                <div class="mb-3">
                                    <label for="systemName" class="form-label">System Name</label>
                                    <input type="text" class="form-control" id="systemName" value="EHR Management System">
                                </div>

                                <div class="mb-3">
                                    <label for="timezone" class="form-label">Timezone</label>
                                    <select class="form-select" id="timezone">
                                        <option>UTC+8 (Philippines)</option>
                                        <option>UTC+0 (London)</option>
                                        <option>UTC-5 (New York)</option>
                                    </select>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Default Language</label>
                                    <select class="form-select">
                                        <option>English</option>
                                        <option>Filipino</option>
                                        <option>Spanish</option>
                                    </select>
                                </div>

                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save me-2"></i> Save Changes
                                </button>
                            </form>
                        </div>
                    </div>
                </div>

                <!-- Theme & Display -->
                <div class="col-md-6">
                    <div class="card shadow-sm">
                        <div class="card-header bg-success text-white">
                            <h5 class="mb-0"><i class="fas fa-palette me-2"></i> Theme & Display</h5>
                        </div>
                        <div class="card-body">
                            <form>
                                <div class="mb-3">
                                    <label class="form-label">Theme Color</label>
                                    <select class="form-select">
                                        <option>Default (Blue)</option>
                                        <option>Dark Mode</option>
                                        <option>Light Mode</option>
                                        <option>Green</option>
                                        <option>Teal</option>
                                    </select>
                                </div>

                                <div class="form-check form-switch mb-3">
                                    <input class="form-check-input" type="checkbox" id="sidebarCollapse">
                                    <label class="form-check-label" for="sidebarCollapse">
                                        Collapsible Sidebar by Default
                                    </label>
                                </div>

                                <button type="submit" class="btn btn-success">
                                    <i class="fas fa-check me-2"></i> Apply Theme
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Notifications & Security -->
            <div class="row mt-4">
                <!-- Notifications -->
                <div class="col-md-6">
                    <div class="card shadow-sm">
                        <div class="card-header bg-warning text-dark">
                            <h5 class="mb-0"><i class="fas fa-bell me-2"></i> Notification Settings</h5>
                        </div>
                        <div class="card-body">
                            <form>
                                <div class="form-check mb-2">
                                    <input class="form-check-input" type="checkbox" id="emailNotif" checked>
                                    <label class="form-check-label" for="emailNotif">
                                        Enable Email Notifications
                                    </label>
                                </div>

                                <div class="form-check mb-2">
                                    <input class="form-check-input" type="checkbox" id="smsNotif">
                                    <label class="form-check-label" for="smsNotif">
                                        Enable SMS Notifications
                                    </label>
                                </div>

                                <div class="form-check mb-3">
                                    <input class="form-check-input" type="checkbox" id="sysNotif" checked>
                                    <label class="form-check-label" for="sysNotif">
                                        Show System Alerts in Dashboard
                                    </label>
                                </div>

                                <button type="submit" class="btn btn-warning text-dark">
                                    <i class="fas fa-save me-2"></i> Update Notifications
                                </button>
                            </form>
                        </div>
                    </div>
                </div>

                <!-- Security Settings -->
                <div class="col-md-6">
                    <div class="card shadow-sm">
                        <div class="card-header bg-danger text-white">
                            <h5 class="mb-0"><i class="fas fa-lock me-2"></i> Security Settings</h5>
                        </div>
                        <div class="card-body">
                            <form>
                                <div class="form-check mb-2">
                                    <input class="form-check-input" type="checkbox" id="2fa">
                                    <label class="form-check-label" for="2fa">
                                        Enable Two-Factor Authentication
                                    </label>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Password Expiration (Days)</label>
                                    <input type="number" class="form-control" min="30" value="90">
                                </div>

                                <button type="submit" class="btn btn-danger">
                                    <i class="fas fa-shield-alt me-2"></i> Save Security Settings
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

