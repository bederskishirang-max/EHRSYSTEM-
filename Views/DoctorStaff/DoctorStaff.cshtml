
@{
    ViewData["Title"] = "Doctors & Staff";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <!-- Header -->
    <section class="content-header">
        <div class="container-fluid d-flex justify-content-between align-items-center">
            <h1>
                <i class="fas fa-user-md me-2"></i> Doctors & Staff
            </h1>
            <a asp-action="AddEdit" class="btn btn-primary">
                <i class="fas fa-plus me-1"></i> Add Doctor / Staff
            </a>
        </div>
    </section>

    <!-- Main Content -->
    <section class="content">
        <div class="container-fluid">
            <div class="card shadow-sm">
                <div class="card-body table-responsive">
                    <table class="table table-striped table-hover align-middle">
                        <thead class="table-dark">
                            <tr>
                                <th>Name</th>
                                <th>Role</th>
                                <th>Specialization</th>
                                <th>Department</th>
                                <th>Contact</th>
                                <th>Status</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                foreach (var staff in Model)
                                {
                                    <tr>
                                        <td>@staff.Name</td>
                                        <td>@staff.Role</td>
                                        <td>@staff.Specialization</td>
                                        <td>@staff.Department</td>
                                        <td>@staff.Contact</td>
                                        <td>
                                            @if (staff.IsActive)
                                            {
                                                <span class="badge bg-success">Active</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Inactive</span>
                                            }
                                        </td>
                                        <td class="text-center">
                                            <a asp-action="Details" asp-route-id="@staff.Id" class="btn btn-sm btn-info me-1">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="AddEdit" asp-route-id="@staff.Id" class="btn btn-sm btn-warning me-1">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@staff.Id" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this staff member?');">
                                                <i class="fas fa-trash-alt"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="7" class="text-center text-muted">
                                        No doctor or staff records found.
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>

