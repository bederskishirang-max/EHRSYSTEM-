
@{
    ViewData["Title"] = "Billing & Claims";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <section class="content-header">
        <div class="container-fluid d-flex justify-content-between align-items-center">
            <h1><i class="fas fa-file-invoice-dollar me-2"></i> Billing & Claims</h1>
            <a asp-action="AddEdit" class="btn btn-primary">
                <i class="fas fa-plus me-1"></i> New Billing / Claim
            </a>
        </div>
    </section>

    <!-- Main Content -->
    <section class="content">
        <div class="container-fluid">
            <div class="card shadow-sm">
                <div class="card-body table-responsive">
                    <table class="table table-striped table-hover align-middle">
                        <thead class="table-dark">
                            <tr>
                                <th>Invoice No.</th>
                                <th>Patient Name</th>
                                <th>Date Issued</th>
                                <th>Total Amount</th>
                                <th>Insurance Provider</th>
                                <th>Claim Status</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                foreach (var bill in Model)
                                {
                                    <tr>
                                        <td>@bill.InvoiceNumber</td>
                                        <td>@bill.PatientName</td>
                                        <td>@bill.DateIssued.ToString("MMM dd, yyyy")</td>
                                        <td>₱@bill.TotalAmount.ToString("N2")</td>
                                        <td>@bill.InsuranceProvider</td>
                                        <td>
                                            @switch (bill.ClaimStatus)
                                            {
                                                case "Pending":
                                                    <span class="badge bg-warning text-dark">Pending</span>;
                                                    break;
                                                case "Approved":
                                                    <span class="badge bg-success">Approved</span>;
                                                    break;
                                                case "Rejected":
                                                    <span class="badge bg-danger">Rejected</span>;
                                                    break;
                                                default:
                                                    <span class="badge bg-secondary">Unknown</span>;
                                                    break;
                                            }
                                        </td>
                                        <td class="text-center">
                                            <a asp-action="Details" asp-route-id="@bill.Id" class="btn btn-sm btn-info me-1">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="AddEdit" asp-route-id="@bill.Id" class="btn btn-sm btn-warning me-1">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@bill.Id" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this billing record?');">
                                                <i class="fas fa-trash-alt"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="7" class="text-center text-muted">
                                        No billing or claims records found.
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>

