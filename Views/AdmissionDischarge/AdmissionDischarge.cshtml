
@{
    ViewData["Title"] = "Admissions / Discharge";
    
}


    <!-- Header -->
    <section class="content-header">
        <div class="container-fluid d-flex justify-content-between align-items-center">
            <h1><i class="fas fa-hospital-user me-2"></i> Admissions / Discharge</h1>
            <a asp-action="AddEdit" class="btn btn-primary">
                <i class="fas fa-plus me-1"></i> New Admission
            </a>
        </div>
    </section>

    <!-- Main Content -->
    <section class="content">
        <div class="container-fluid">
            <div class="card shadow-sm">
                <div class="card-body table-responsive">
                    <table class="table table-striped table-hover align-middle">
                        <thead class="table-dark">
                            <tr>
                                <th>Patient Name</th>
                                <th>Admission Date</th>
                                <th>Discharge Date</th>
                                <th>Assigned Doctor</th>
                                <th>Room No.</th>
                                <th>Status</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                foreach (var record in Model)
                                {
                                    <tr>
                                        <td>@record.PatientName</td>
                                        <td>@record.AdmissionDate.ToString("MMM dd, yyyy")</td>
                                        <td>@(record.DischargeDate?.ToString("MMM dd, yyyy") ?? "-")</td>
                                        <td>@record.AssignedDoctor</td>
                                        <td>@record.RoomNumber</td>
                                        <td>
                                            @if (record.Status == "Admitted")
                                            {
                                                <span class="badge bg-success">Admitted</span>
                                            }
                                            else if (record.Status == "Discharged")
                                            {
                                                <span class="badge bg-primary">Discharged</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Unknown</span>
                                            }
                                        </td>
                                        <td class="text-center">
                                            <a asp-action="Details" asp-route-id="@record.Id" class="btn btn-sm btn-info me-1">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="AddEdit" asp-route-id="@record.Id" class="btn btn-sm btn-warning me-1">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@record.Id" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this record?');">
                                                <i class="fas fa-trash-alt"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="7" class="text-center text-muted">
                                        No admission records found.
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>

