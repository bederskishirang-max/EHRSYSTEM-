
@{
    ViewData["Title"] = "Lab Results";
   
}


    <!-- Header -->
    <section class="content-header">
        <div class="container-fluid d-flex justify-content-between align-items-center">
            <h1>
                <i class="fas fa-vial me-2"></i> Lab Results
            </h1>
            <a asp-action="AddEdit" class="btn btn-primary">
                <i class="fas fa-plus me-1"></i> Add Lab Result
            </a>
        </div>
    </section>

    <!-- Main Content -->
    <section class="content">
        <div class="container-fluid">
            <div class="card shadow-sm">
                <div class="card-body table-responsive">
                    <table class="table table-striped table-hover align-middle">
                        <thead class="table-dark">
                            <tr>
                                <th>Patient</th>
                                <th>Test Name</th>
                                <th>Result</th>
                                <th>Normal Range</th>
                                <th>Date Performed</th>
                                <th>Status</th>
                                <th>Doctor</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                foreach (var lab in Model)
                                {
                                    <tr>
                                        <td>@lab.PatientName</td>
                                        <td>@lab.TestName</td>
                                        <td>@lab.Result</td>
                                        <td>@lab.NormalRange</td>
                                        <td>@lab.DatePerformed.ToShortDateString()</td>
                                        <td>
                                            @if (lab.Status == "Normal")
                                            {
                                                <span class="badge bg-success">@lab.Status</span>
                                            }
                                            else if (lab.Status == "Abnormal")
                                            {
                                                <span class="badge bg-danger">@lab.Status</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">@lab.Status</span>
                                            }
                                        </td>
                                        <td>@lab.DoctorName</td>
                                        <td class="text-center">
                                            <a asp-action="Details" asp-route-id="@lab.Id" class="btn btn-sm btn-info me-1">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="AddEdit" asp-route-id="@lab.Id" class="btn btn-sm btn-warning me-1">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@lab.Id" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this record?');">
                                                <i class="fas fa-trash-alt"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="8" class="text-center text-muted">
                                        No lab results found.
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
